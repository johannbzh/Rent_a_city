<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6">
    <div class="form-login">
      <h1>Submit a review for that city</h1>
        <%= simple_form_for [@city, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <div class="form-actions">
            <%= f.button :submit, "Submit review", class: "btn btn-flat mt-3" %>
            <%= link_to "Back", city_path(@city), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if policy(Review).create? %>
  <%= link_to "New review", new_review_path %>
<% end %>
