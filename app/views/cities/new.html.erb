<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6">
    <div class="form-login">
      <h1>Create a new city</h1>
        <%= simple_form_for @city do |f| %>
          <%= f.input :name %>
          <%= f.input :country, as: :string  %>
          <%= f.input :price %>
          <%= f.input :main_monument %>
          <%= f.input :photos, as: :file, input_html: { multiple: true, class:'d-none', id: 'photo-input' }, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
          <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
          <div class="form-actions">
            <%= f.button :submit, "Create city", class: "btn btn-flat mt-3" %>
            <%= link_to "Back", cities_path, class: "btn btn-flat-clair" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
