<div class="container d-flex">

  <div class="card-product-show col-8">
    <div>
      <h1 class="mb-4"><%= @city.name %></h1>
    </div>
    <div class ="photo-product-size">
      <%= @city.photos.attached? ? cl_image_tag(@city.photos.first.key) : image_tag('city_background.jpg') %>
    </div>
    <div class="card-infos-show">
      <p><strong>Country: </strong><%= @city.country %></p>
      <p><strong>Main monument to own: </strong><%= @city.main_monument %></p>
      <p><strong>Price per day: </strong><%= @city.price %>â‚¬</p>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "card-trip-user avatar-bordered" %>
    </div>
  </div>

  <div class="booking-calendar col-4 margin-right: 100px sticky-top">
    <div class="form-wrapper">
       <%= simple_form_for [ @city, @booking ] do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Book now", class: "btn-flat" %>
       <% end %>
    </div>
  </div>
</div>

<div>
  <% if policy(@city).add_review? %>
    <div class="form-login">
      <h1>Submit a review for that city</h1>
        <%= simple_form_for [@city, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <div class="form-actions">
            <%= f.button :submit, "Submit review", class: "btn btn-flat mt-3" %>
            <%= link_to "Back", dashboard_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  <% end %>
</div>

<div>
  <ul>
    <% @reviews.each do |review| %>
      <li><%= "#{review.user.first_name} #{review.user.last_name}" %></li>
      <li><%= review.content %></li>
      <li><%= review.rating %></li>
    <% end %>
  </ul>
</div>
