<div class="container d-flex">

  <div class="card-product-show col-8">
    <div>
      <h1><%= @city.name %></h1>
    </div>
    <div class ="photo-product-size">
      <%= @city.photos.attached? ? cl_image_tag(@city.photos.first.key) : image_tag('city_background.jpg') %>
    </div>
    <div class="card-infos-show">
      <p><strong>Country: </strong><%= @city.country %></p>
      <p><strong>Main monument to visit: </strong><%= @city.main_monument %></p>
      <p><strong>Price per day: </strong><%= @city.price %>â‚¬</p>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "card-trip-user avatar-bordered" %>
    </div>
  </div>

  <div class="booking-calendar col-4; margin-right: 100px">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :From, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :To, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Book now", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


