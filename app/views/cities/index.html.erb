
<div class="banner" style="background-image: url(<%= asset_path('banner_image.jpg') %>);">
  <div class="container">
    <h1>Rent your city and become a <strong>mayor</strong>!</h1>
    <p>Change your life for a few days</p>
    <%= link_to "Discover our cities", cities_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container text-center mt-3">
  <h1>It's possible with Rent a City</h1>
</div>


<div class="container mt-3">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<div class="container mb-5">
  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y2l0eXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60)">
      NEW YORK
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1444084316824-dc26d6657664?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGNpdHl8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60)">
      TOKYO
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1549643276-fdf2fab574f5?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NDF8fGNpdHl8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60)">
      MADRID
    </div>
  </div>
</div>
